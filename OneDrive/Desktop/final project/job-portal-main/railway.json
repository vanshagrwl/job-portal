{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install && npm run build:server"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm start",
    "restartPolicyMaxRetries": 5
  },
  "plugins": ["postgresql"],
  "variables": {
    "PORT": {
      "description": "Port the server runs on",
      "value": "3000"
    }
  }
}
